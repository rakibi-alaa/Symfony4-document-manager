<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        
        <link rel="stylesheet" href="{{asset('css/css.css')}}" />
        <link rel="stylesheet" href="{{asset('css/font-awesome.min.css')}}" />
        
        
        
        <script type="text/javascript" src="{{asset('js/jquery.js')}}"></script>
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <a class="navbar-brand" href="{{ path('home') }}">Acceuil</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                     <li class="nav-item">
                        <a class="nav-link" href="{{ path('geodoc') }}">GéoDoc</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('geochimie') }}">GéoChimie</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('geochrono') }}">GéoChrono</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('geoheritage') }}">GéoHéritage</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('ressources') }}">RessourcesMinerale</a>
                    </li>
                </ul>

               <div class="form-inline my-2 my-lg-0">
               <ul class="navbar-nav mr-auto">

                    <li class="nav-item">
                        {% if app.user  %}
                        {% if app.user.profile.id == 2 %}
                        <a class="nav-link" href="{{ path('administration') }}">Administration</a>
                        {% endif %}
                        
                            
                        
                    
                        {% endif %}
                    </li>
                    <li class="nav-item">
                        {% if not app.user %}
                            
                        <a class="nav-link" href="{{ path('authentication') }}">Connexion</a>
                        {% else %}
                        <a class="nav-link" href="{{ path('deconnexion') }}">Déconnexion</a> 
                        {% endif %}
                    </li>
                     
                </ul>
    
      
    
    </div>
            </div>
        </nav>
        <div class="container">
            {% block body %}{% endblock %}
        </div>
        
        {% block javascripts %}{% endblock %}
    </body>
</html>
